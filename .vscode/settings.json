{
    // formatter
    "python.formatting.provider": "black",
    // Linter
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,  // pylint disabled when using flake8
    "python.linting.flake8Args": [
        "--max-line-length=88",  // limited row length (default:79)
        "--ignore=E203,W503"    // ignored error code（For compatibility with Black）
    ]
    
}
